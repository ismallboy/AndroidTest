<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@mipmap/background_assistor"
    >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/head"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="用户名/邮箱"
        android:minWidth="200dp"
        android:layout_marginTop="35dp"
        android:paddingLeft="8dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@mipmap/user_assistor"
        android:height="45dp"
        android:textColorHint="@color/white"
        />
    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:hint="密码"
        android:minWidth="200dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/white"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@mipmap/user_assistor"
        android:inputType="textPassword"
        />


    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_assistor"
        android:text="登陆"
        android:layout_marginTop="35dp"
        android:id="@+id/btnLogin"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="30dp"

        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/divide_assistor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用社交账号登陆"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/divide_assistor"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/wechat"
        />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/qq"
            android:layout_marginLeft="60dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/weibo"
            android:layout_marginLeft="60dp"
            />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费注册"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
</LinearLayout>
